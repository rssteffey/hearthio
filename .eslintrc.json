{
    "extends": "airbnb",
    "plugins": [
        "react",
        "meteor"
    ],
    "rules": {
        "indent": ["error", "tab"],
        "react/jsx-indent": ["error", "tab"],
        "no-multi-spaces": [
            "error", {
                "exceptions": {
                    "Property": true,
                    "VariableDeclarator": true,
                    "ImportDeclaration": true
                }
            }
        ],
        "no-underscore-dangle": "off",
        "no-mixed-spaces-and-tabs": ["error", "smart-tabs"]
    }
}
